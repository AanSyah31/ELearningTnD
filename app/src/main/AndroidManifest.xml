<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tnd.elearningtnd">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tnd.elearningtnd.Splash"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tnd.elearningtnd.Login"
            android:screenOrientation="portrait"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.MainMenu"
            android:screenOrientation="fullSensor"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.ModulDigital"
            android:screenOrientation="fullSensor"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.TentangKami"
            android:screenOrientation="portrait"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.InfoAplikasi"
            android:screenOrientation="fullSensor"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.List"
            android:screenOrientation="portrait"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.ListPdf"
            android:screenOrientation="portrait"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.utilities.Loading"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.utilities.LoadingModul"
            android:theme="@style/materialWhiteBar" />
        <activity
            android:name="com.tnd.elearningtnd.VideoYT"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.tnd.elearningtnd.ViewPDF"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreen" />
    </application>

</manifest>