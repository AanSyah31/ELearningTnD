<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:id="@+id/anim"
    android:background="@color/border_lightgreen1">

    <LinearLayout
        android:id="@+id/linearLayoutList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivSplash"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tentangKamiMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/tv_ELearning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Learning"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_TnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training and Development"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT SSMS Tbk"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>