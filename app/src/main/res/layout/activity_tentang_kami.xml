<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/border_lightgreen1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/border_lightgreen1"
        android:id="@+id/ll">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kunjungikami"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow Us On:"
                android:textSize="15sp"
                android:textColor="@color/Black"
                android:fontFamily="@font/helvetica"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="-15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/library_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:outlineSpotShadowColor="@color/border_lightgreen1"
                android:outlineAmbientShadowColor="@color/border_lightgreen1"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/border_lightgreen1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/White"
                    android:outlineAmbientShadowColor="@color/White">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_libraryapp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SRS E-Library App"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/helvetica"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sawitpedia_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:outlineSpotShadowColor="@color/border_lightgreen1"
                android:outlineAmbientShadowColor="@color/border_lightgreen1"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/border_lightgreen1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:outlineSpotShadowColor="@color/White"
                    android:outlineAmbientShadowColor="@color/White">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_sawitpedia"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SawitPedia      SRS"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/helvetica"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/palmsentry_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:outlineSpotShadowColor="@color/border_lightgreen1"
                android:outlineAmbientShadowColor="@color/border_lightgreen1"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/border_lightgreen1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/White"
                    android:outlineAmbientShadowColor="@color/White">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_palmsentry"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SRS      PalmSentry"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/helvetica"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="-15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/infoaplikasi_card"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:outlineSpotShadowColor="@color/border_lightgreen1"
                android:outlineAmbientShadowColor="@color/border_lightgreen1"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/border_lightgreen1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/White"
                    android:outlineAmbientShadowColor="@color/White">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/infoaplikasi"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Info Aplikasi"
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/Black"
                        android:fontFamily="@font/helvetica"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/gradient_photo"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>