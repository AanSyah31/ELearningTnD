<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:background="@color/border_lightgreen1"
    tools:context=".TentangKami">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:id="@+id/menuModul"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textSize="30sp"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tentang_kami"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/tentangKamiMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp">

            <TextView
                android:id="@+id/tv_ELearning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Learning"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_TnD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training and Development"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT SSMS Tbk"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/helvetica"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>